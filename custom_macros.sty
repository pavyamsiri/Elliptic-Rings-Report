\topmargin=-20mm
% Sets vertical space between paragraphs to 10 true point
\parskip=10truept
% Sets paragraph indentation to 0
\parindent=0mm
% Sets vertical spacing of footers
\footskip=14pt
% Sets height of headers
\headheight=14pt

